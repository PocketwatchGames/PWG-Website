---
const parent = import.meta.env.DEV ? "localhost" : "pocketwatchgames.com";
const src = `//player.twitch.tv/?channel=pocketwatch&parent=${parent}`;
---

<iframe
	src={src}
	parent={parent}
	height="720"
	width="1280"
	frameborder="0"
	scrolling="no"
	title="Twitch Embed"
	allowfullscreen="true"></iframe>

<style>
	iframe {
		aspect-ratio: 16 / 9;
		border: 1px solid var(--color-white);
		border-radius: 8px;
		height: 100%;
		overflow: hidden;
		width: 100%;
	}
</style>
