---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "@astrojs/image/components";

export interface Props {
	content: {
		title: string;
		tags: string[];
		date: string;
		thumbnail?: string;
	};
}

const {
	content: { title, tags, date, thumbnail },
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={title} />
	</head>

	<body>
		<Header />

		<h1>
			<div class="wrapper">{title}</div>
		</h1>

		<article class="wrapper blog content">
			{
				thumbnail && (
					<Image
						class="hero-banner"
						format="webp"
						width={1200}
						height={600}
						loading="lazy"
						src={thumbnail}
						alt="blog post hero banner"
					/>
				)
			}

			<main>
				<slot />
			</main>
		</article>

		<Footer />
	</body>
</html>
