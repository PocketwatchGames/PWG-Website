---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		tags: string[];
		date: string;
		heroImage?: {
			src: string;
			alt: string;
		};
	};
}

const {
	content: { title, tags, date, heroImage },
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={title} />
	</head>

	<body>
		<Header />

		<h1>
			<div class="wrapper">{title}</div>
		</h1>

		<article class="wrapper content">
			{
				heroImage && (
					<img
						width="1280"
						height="600"
						loading="lazy"
						src={heroImage.src}
						alt={heroImage.alt}
					/>
				)
			}

			<main>
				<slot />
			</main>
		</article>

		<Footer />

		<style>
			img {
				width: 100vw;
				object-fit: cover;
				object-position: center;
				margin-top: 2rem;
				margin-bottom: 4rem;
				max-width: 1280px;
			}

			@media (max-width: 50em) {
				img {
					height: 260px;
					margin-top: 0;
					margin-bottom: 2rem;
				}
			}
		</style>
	</body>
</html>
